# Database Configuration
DB_NAME=smart_learning_db
DB_USER=admin
DB_PASSWORD=your_secure_password_here
DB_HOST=postgres
DB_PORT=5432
SHOW_SQL_QUERY=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_USE_SSL=false
ELASTICSEARCH_VERIFY_CERTS=false

# Application Settings
PROJECT_NAME=Smart Learning Platform
PROJECT_DESCRIPTION=Платформа для управления учебными курсами и онлайн-обучения
CORS_ALLOW_ORIGINS=http://localhost:8302,http://127.0.0.1:8302

# JWT Configuration
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256

# Auth Service Configuration
AUTH_API_HOST=backend
AUTH_API_PORT=8000

# PostgreSQL Root Configuration (for init script)
POSTGRES_DB=smart_learning_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here

# Airflow Configuration
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=true
AIRFLOW__CORE__LOAD_EXAMPLES=false
AIRFLOW__API__AUTH_BACKENDS=airflow.api.auth.backend.basic_auth
AIRFLOW__SCHEDULER__ENABLE_HEALTH_CHECK=true
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=true
AIRFLOW__WEBSERVER__RBAC=false

# Frontend Configuration
VITE_BACKEND_URL=http://localhost:8301/api/v1
VITE_LOGGING=info

# Development/Production Mode
ENVIRONMENT=production
DEBUG=false