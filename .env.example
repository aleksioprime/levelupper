# ======================
# ПРИМЕР ФАЙЛА .env ДЛЯ РАЗРАБОТКИ
# Скопируйте в .env и настройте под свое окружение
# ======================

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=учебные_курсы
POSTGRES_USER=разработка
POSTGRES_PASSWORD=пароль123

# Legacy DB settings (совместимость)
DB_HOST=postgres
DB_NAME=учебные_курсы
DB_USER=разработка
DB_PASSWORD=пароль123
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Timezone
TZ=Europe/Moscow
PGTZ=Europe/Moscow

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-for-development-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
CORS_ALLOW_ORIGINS=["http://localhost:8302","http://localhost:8303","http://localhost:5173"]

# Elasticsearch Configuration
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTIC_HOST=http://elasticsearch:9200

# Airflow Configuration
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://разработка:пароль123@postgres/airflow_db
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__FERNET_KEY=ZGV2ZWxvcG1lbnQtZmVybmV0LWtleS1jaGFuZ2UtdGhpcw==
AIRFLOW__WEBSERVER__SECRET_KEY=development-secret-key
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=true
PYTHONPATH=/opt/airflow

# Airflow admin user (используется в init.sh)
AIRFLOW_ADMIN_USERNAME=airflow
AIRFLOW_ADMIN_PASSWORD=airflow
AIRFLOW_ADMIN_FIRSTNAME=Airflow
AIRFLOW_ADMIN_LASTNAME=Admin
AIRFLOW_ADMIN_EMAIL=admin@example.com

# Frontend Configuration
VITE_BACKEND_URL=http://localhost:8301
VITE_LOGGING=info

# SQLAdmin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
